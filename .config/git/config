[color]
	pager = true
	ui = auto
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green bold
[color "diff"]
	plain = normal
	meta = cyan
	frag = normal
	old = red bold
	new = green bold
	commit = yellow bold
	whitespace = red
[color "branch"]
	local = normal
	remote = red
	plain = normal
	current = white
[color "status"]
	header = normal
	added = red
	updated = green bold
	changed = yellow
	untracked = red
	nobranch = red
[color "grep"]
	match = normal
[color "interactive"]
	prompt = green bold
	header = cyan
	help = yellow
	error = red
[core]
  whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
  autoclrf=true
  preloadindex = true
  fscache = true
  autocrlf = input
  commentchar = ";"
  askpass = git-gui--askpass
  hooksPath = githooks
  pager = delta
[push]
	default = simple
[pull]
	default = current
	ff = only
[rerere]
	enabled = true
[pack]
	windowMemory = 250m
[init]
	templatedir = "$PRIVATE_DOTFILES/.git_templates"
	defaultBranch = master
[gc]
	auto = 256
[interactive]
	diffFilter = delta --color-only
[delta]
	navigate = true    # use n and N to move between diff sections
	light = false
[credential]
	helper = store --file="$PRIVATE_DOTFILES/../git_credentials"
[merge]
	conflictstyle = diff3
	tool = nvimdiff
	layout = 2
	commit = yes
	ff = no
	keepBackup = false
	trustExitCode = true
[diff]
	tool = nvimdiff
	layout = 1
	colorMoved = default
	keepBackup = false
	trustExitCode = true
[status]
	submodulesummary = 1
[fetch]
	prune = false
[branch]
	autoSetupRebase = never
[commit]
	template = gitmessage
	gpgsign = true
[gpg]
	program = gpg
[alias]
	lg =  log --color --decorate --graph --date-order --first-parent --pretty=format:'%C(auto)%h%Creset %C(auto)%d%Creset %s %C(green)(%ad) %C(bold cyan)<%an>%Creset'
	lgb = log --color --decorate --graph --date-order --branches --first-parent --pretty=format:'%C(auto)%h%Creset %C(auto)%d%Creset %s %C(green)(%ad) %C(bold cyan)<%an>%Creset'
	lga = log --color --decorate --graph --date-order --all --pretty=format:'%C(auto)%h%Creset %C(auto)%d%Creset %s %C(green)(%ad) %C(bold cyan)<%an>%Creset'
	I = !git ls-files -v | grep '^[[:lower:]]'
	M = !git status -sb | sed 1d | sed '/^[DMARC ]M /!d' | sed 's/^...//g'
	U = !git status -sb | sed 1d | sed '/^?? /!d' | sed 's/^...//g'	
	UU = !git status -sb | sed 1d | sed '/^UU /!d' | sed 's/^...//g'
	identity = "! git config user.name \"$(git config user.$1.name)\"; git config user.email \"$(git config user.$1.email)\"; git config user.signingkey \"$(git config user.$1.signingkey)\"; :"
