[user]
    name = Emi
[color]
    pager = true
    ui = auto
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green bold
[color "diff"]
    plain = normal
    meta = cyan
    frag = normal
    old = red bold
    new = green bold
    commit = yellow bold
    whitespace = red
[color "branch"]
    local = normal
    remote = red
    plain = normal
    current = white
[color "status"]
    header = normal
    added = red
    updated = green bold
    changed = yellow
    untracked = red
    nobranch = red
[color "grep"]
    match = normal
[color "interactive"]
    prompt = green bold
    header = cyan
    help = yellow
    error = red
[core]
    whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
    autoclrf=true
    preloadindex = true
    fscache = true
    excludesfile = ~/.gitignore_global
    pager = $DOTFILES/diff-highlight | less -rJN
    autocrlf = input
[branch]
    autosetuprebase = always
[push]
    default = simple
[pull]
    default = current
[rerere]
    enabled = true
[pack]
    windowMemory = 250m
[branch "master"]
    rebase = true
[init]
    templatedir = ~/.git_template
[gc]
    auto = 256
[alias]
    modified = "!f() { git status -sb | sed 1d | sed '/[M]*[M]* /!d' | sed 's/^...//g'; }; f"
    umerged = "!f() { git status -sb | sed 1d | sed '/[U]*[U]* /!d' | sed 's/^...//g'; }; f"
    deleted = "!f() { git status -sb | sed 1d | sed '/[D]*[D]* /!d' | sed 's/^...//g'; }; f"
    untracked = "!f() { git status -sb | sed 1d | sed '/?? /!d' | sed 's/^...//g'; }; f"
[interactive]
    diffFilter = $DOTFILES/diff-highlight
[pager]
    show = nvim -R -
    color = true
[credential]
    helper = cache --timeout=144000
[merge]
    conflictstyle = diff3
    tool = vimdiff3
[mergetool]
    prompt = false
[diff]
    tool = vimdiff3
[difftool]
    prompt = false
