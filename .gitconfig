[color]
    pager = true
    ui = auto
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green bold
[color "diff"]
    plain = normal
    meta = cyan
    frag = normal
    old = red bold
    new = green bold
    commit = yellow bold
    whitespace = red
[color "branch"]
    local = normal
    remote = red
    plain = normal
    current = white
[color "status"]
    header = normal
    added = red
    updated = green bold
    changed = yellow
    untracked = red
    nobranch = red
[color "grep"]
    match = normal
[color "interactive"]
    prompt = green bold
    header = cyan
    help = yellow
    error = red
[core]
    whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
    autoclrf=true
    preloadindex = true
    fscache = true
    excludesfile = /Users/emiliano/dotfiles/.gitignore_global
    #pager = diff-highlight | less -rJN
    autocrlf = input
    commentchar = ";"
    askpass = git-gui--askpass
[push]
    default = simple
[pull]
    default = current
[rerere]
    enabled = false
[pack]
    windowMemory = 250m
[init]
    templatedir = ~/.git_template
[gc]
    auto = 256
[alias]
    M = "!f() { git status -sb | sed 1d | sed '/^[DMARC ]M /!d' | sed 's/^...//g'; }; f"
    U = "!f() { git status -sb | sed 1d | sed '/^?? /!d' | sed 's/^...//g'; }; f"
    UU = "!f() { git status -sb | sed 1d | sed '/^UU /!d' | sed 's/^...//g'; }; f"
[interactive]
    diffFilter = /Users/emiliano/dotfiles/diff-highlight
[pager]
    show = nvim -R -
    color = true
[credential]
    helper = cache --timeout=144000
[merge]
    tool = vimdiff3
    #tool = idea
    commit = no
[diff]
    tool = vimdiff3
    #tool = idea
[difftool "vimdiff3"]
    cmd = nvim -d $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
[mergetool "vimdiff3"]
    cmd = nvim -d $LOCAL $BASE $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
[mergetool "diffconflicts"]
    keepBackup = false
    trustExitCode = true
    cmd = diffconflicts nvim $LOCAL $BASE $REMOTE $MERGED
[mergetool "intellij"]
    cmd = ~/bin/idea merge $(cd $(dirname "$LOCAL") && pwd)/$(basename "$LOCAL") $(cd $(dirname "$REMOTE") && pwd)/$(basename "$REMOTE") $(cd $(dirname "$BASE") && pwd)/$(basename "$BASE") $(cd $(dirname "$MERGED") && pwd)/$(basename "$MERGED")
    trustExitCode = true
[difftool "intellij"]
    cmd = ~/bin/idea diff $(cd $(dirname "$LOCAL") && pwd)/$(basename "$LOCAL") $(cd $(dirname "$REMOTE") && pwd)/$(basename "$REMOTE")
[status]
    submodulesummary = 1
[fetch]
    prune = false
[branch]
    autoSetupRebase = never
[gitflow "feature.start"]
    fetch = true
[trace2]
    normalTarget = /Users/emiliano/gitlog.normal
[commit]
    template = /Users/emiliano/.gitmessage
