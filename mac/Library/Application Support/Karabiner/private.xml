<?xml version="1.0"?>
<root>
     <include once="true" path="{{ ENV_Karabiner_Resources }}/include/checkbox/ubiquitous_vim_bindings.xml" />
     <include once="true" path="{{ ENV_Karabiner_Resources }}/include/checkbox/standards/fn.xml" />
     <include once="true" path="{{ ENV_Karabiner_Resources }}/include/checkbox/pass_through_mode.xml" />
    <item>
        <name>Change behavior of Option_R to '@' key</name>
        <appendix></appendix>
        <identifier>PRIVATE_OPTION_R</identifier>
        <autogen>
            __KeyToKey__
            KeyCode::OPTION_R,
            KeyCode::2, ModifierFlag::SHIFT_L
        </autogen>
    </item>
    <item>
        <name>Change behavior of TAB to 4 spaces</name>
        <appendix></appendix>
        <identifier>PRIVATE_TAB</identifier>
        <autogen>
            __KeyToKey__
            KeyCode::TAB,
            KeyCode::SPACE, KeyCode::SPACE, KeyCode::SPACE, KeyCode::SPACE
        </autogen>
    </item>
    <item>
      <name>Switch current setting profile by COMMAND_R+n</name>
      <appendix>(You can make multiple profiles by MenuBar tab on Preferences.</appendix>
      <appendix>This setting changes current profile by shortcut.)</appendix>
      <identifier>private.remap.switch_profile_fn1_fn4</identifier>
      <autogen>__KeyToKey__ KeyCode::KEY_1, ModifierFlag::COMMAND_R, KeyCode::VK_OPEN_URL_APP_Karabiner_Profile0</autogen>
      <autogen>__KeyToKey__ KeyCode::KEY_2, ModifierFlag::COMMAND_R, KeyCode::VK_OPEN_URL_APP_Karabiner_Profile1</autogen>
      <autogen>__KeyToKey__ KeyCode::KEY_3, ModifierFlag::COMMAND_R, KeyCode::VK_OPEN_URL_APP_Karabiner_Profile2</autogen>
      <autogen>__KeyToKey__ KeyCode::KEY_4, ModifierFlag::COMMAND_R, KeyCode::VK_OPEN_URL_APP_Karabiner_Profile3</autogen>
    </item>
</root>
