" questo Ã¨ un alias al .vimperatorxxx del sistema
source $HOME/.vimperatorsys

" editor is an alias to the real editor
set animations
set complete=slbS
set scroll=0
set maxitems=15

set visualbell
set gui=none
set scrollbars=false
set focuscontent
set fullscreen

" To Enable map <Space>
js <<EOM
  window.addEventListener('keypress',function (event) {
    var code=event.charCode;
    if ((liberator.mode === modes.INSERT && modes.extended === modes.MENU)
    ||(liberator.mode ==modes.NORMAL && code==32)
    ||(liberator.mode ==modes.COMMAND_LINE && code !=32)){
      let map = mappings.get(liberator.mode, events.toString(event));
      if (map) {
        event.preventDefault();
        event.stopPropagation();
        map.execute();
      }
    }
  },false);
EOM

" My Customization
map <Space> <Leader>
noremap j 5j
noremap k 5k
noremap J gT
noremap K gt

noremap s :tabopen -
noremap <leader>t :bmarks -T<Space>
noremap <leader>d :tabduplicate<CR>
noremap <leader>i :js statusline.setVisibility(statusline.setVisibility.TOGGLE)<CR>
